@model MvcCoreDemo.Models.ViewModel.EditUserDTO
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
}

<div class="bg-secondary bg-opacity-10 py-1">
    <div class="container text-center">
        <h2> Edit User Details </h2>
    </div>
</div>

<div class="container py-5">

    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="UserName">Username</label>
                <input class="form-control" asp-for="UserName"/>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3 d-flex justify-content-start gap-3">
                <div class="form-check">
                    <input type="checkbox" id="userRoleCheck" class="form-check-input" checked disabled />
                    <label class="form-label" for="userRoleCheck">USER</label>
                </div>

                @if (User.IsInRole("SUPERADMIN"))
                {
                    <div class="form-check">
                        <input type="checkbox" id="adminRoleCheck" class="form-check-input" asp-for="IsAdmin" />
                        <label class="form-label" for="adminRoleCheck">ADMIN</label>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input type="checkbox" id="adminRoleCheck" class="form-check-input" asp-for="IsAdmin" disabled />
                        <label class="form-label" for="adminRoleCheck">ADMIN</label>
                    </div>
                }  
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-dark"><i class="bi bi-bookmark"> Save Changes </i></button>
            </div>

            <input type="hidden" asp-for="Id" disabled/>
        </form>
    }
    else
    {
        <p>Tag Not Found!</p>
    }

</div>
