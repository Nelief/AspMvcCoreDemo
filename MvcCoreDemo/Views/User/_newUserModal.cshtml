@model MvcCoreDemo.Models.ViewModel.NewUserDTO
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{

}

<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalNewUser">
    New User
</button>

<form method="post">
    <div class="modal fade" id="modalNewUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">New User Details</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" asp-for="UserName">Username</label>
                        <input type="text" class="form-control" asp-for="UserName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">Email Address</label>
                        <input type="email" class="form-control" asp-for="Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input type="password" class="form-control" asp-for="Password" />
                    </div>
                    <div class="mb-3 d-flex justify-content-start gap-3">
                        <div class="form-check">
                            <input type="checkbox" id="userRoleCheck" class="form-check-input" checked disabled />
                            <label class="form-label" for="userRoleCheck">USER</label>
                        </div>

                        @if (User.IsInRole("SUPERADMIN"))
                        {
                            <div class="form-check">
                                <input type="checkbox" id="adminRoleCheck" class="form-check-input" asp-for="AdminRoleChek" />
                                <label class="form-label" for="adminRoleCheck">ADMIN</label>
                            </div>
                        }
                        else{
                            <div class="form-check">
                                <input type="checkbox" id="adminRoleCheck" class="form-check-input" asp-for="AdminRoleChek" disabled />
                                <label class="form-label" for="adminRoleCheck">ADMIN</label>
                            </div>
                        }
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save User</button>
                </div>
            </div>
        </div>
    </div>
</form>
